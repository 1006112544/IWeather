            android:id="@+id/weather_forecast_1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/forecast_icon_1"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/type_one_sunny"/>

            <RelativeLayout
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/forecast_date_1"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"/>

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/forecast_temp_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="最低温度:13°"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:textColor="#969696"
                    android:layout_marginTop="4dp"
                    android:textSize="10sp"
                    android:layout_below="@+id/forecast_date_1"
                    android:id="@+id/forecast_txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少云  最高12℃  东北风 10 到 15 km/h"/>
            </RelativeLayout>
        </LinearLayout>
